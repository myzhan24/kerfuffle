{
  "parser": "babel-eslint",
  "extends": "standard",
  "rules": {
    "indent": ["error", 4],
    "object-curly-spacing": "off",
    "space-before-function-paren": "off",
    "semi": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": true
  }
}
